#!/bin/bash
curl -s https://git.parabola.nu/blacklist.git/plain/blacklist.txt | grep "nonfree" > ~/.cache/blacklist
mapfile -t installed < <(sudo pacman -Qq)
for program in "${installed[@]}"
do
	grep -q -w "^$program:" ~/.cache/blacklist && echo -n -e "\e[1m$program \e[0m"
	grep -w "^$program:" ~/.cache/blacklist | cut -d ":" -f 5,6
done
